<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pill Shape Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF16213E" />
            <corners android:radius="24dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

    <!-- Icon Placeholder -->
    <item android:width="24dp" android:height="24dp" android:gravity="center_vertical|left" android:left="12dp">
        <shape android:shape="oval">
            <solid android:color="#FF0F9B58" /> 
        </shape>
    </item>

    <!-- Text Placeholder -->
    <item android:width="80dp" android:height="12dp" android:gravity="center_vertical|right" android:right="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE8D5B7" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
