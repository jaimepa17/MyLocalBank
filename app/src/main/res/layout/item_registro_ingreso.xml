<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_stat_card"
    android:padding="@dimen/spacing_md"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:gravity="center_vertical">

    <!-- Icon -->
    <TextView
        android:id="@+id/tvIcono"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="ðŸ’°"
        android:textSize="22sp"
        android:background="@drawable/bg_icon_circle" />

    <!-- Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_sm">

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PixelText.Body"
            android:text="Ingreso"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PixelText.Small"
            android:text="01/01/2025"
            android:textColor="@color/text_secondary" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PixelText.Body"
        android:text="+C$0.00"
        android:textColor="@color/green_accent"
        android:textStyle="bold" />

    <!-- Delete -->
    <TextView
        android:id="@+id/btnEliminar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="âœ•"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
