<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF16213E" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Title -->
    <item android:top="16dp" android:left="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0F7A3F" /> <!-- Gold/Green Heading -->
            <size android:width="80dp" android:height="12dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Balance Big Text -->
    <item android:top="40dp" android:left="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE8D5B7" /> <!-- Primary Text -->
            <size android:width="120dp" android:height="24dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Income Row -->
    <item android:bottom="40dp" android:left="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0F9B58" /> <!-- Green -->
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Expense Row -->
    <item android:bottom="16dp" android:left="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFD94040" /> <!-- Red -->
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
