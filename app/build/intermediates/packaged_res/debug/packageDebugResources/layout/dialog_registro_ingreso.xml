<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/page_padding">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PixelText.Title"
            android:text="REGISTRAR INGRESO"
            android:textSize="@dimen/text_title" />

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/gold"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Moneda -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PixelText.Small"
            android:text="â–¸ MONEDA"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <Spinner
            android:id="@+id/spinnerMoneda"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_min_height"
            android:background="@drawable/bg_stat_card"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Monto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PixelText.Small"
            android:text="â–¸ MONTO *"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <EditText
            android:id="@+id/etMonto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_min_height"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:fontFamily="monospace"
            android:textSize="@dimen/text_body"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/bg_stat_card"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Toggle Button -->
        <TextView
            android:id="@+id/btnToggleAvanzado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar opciones avanzadas â–¼"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="@dimen/spacing_sm"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Advanced Layout -->
        <LinearLayout
            android:id="@+id/layoutAvanzado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Fuente (Opcional - Para vincular pagos fijos) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PixelText.Small"
                android:text="â–¸ VINCULAR A FUENTE (Opcional)"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <Spinner
                android:id="@+id/spinnerFuente"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_min_height"
                android:background="@drawable/bg_stat_card"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- CategorÃ­a -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PixelText.Small"
                android:text="â–¸ CATEGORÃA"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_min_height"
                android:background="@drawable/bg_stat_card"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Descripcion -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PixelText.Small"
                android:text="â–¸ DESCRIPCIÃ“N"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_min_height"
                android:hint="Ej: Freelance, Venta..."
                android:inputType="text"
                android:fontFamily="monospace"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:background="@drawable/bg_stat_card"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PixelText.Small"
                android:text="â–¸ FECHA (opcional)"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <TextView
                android:id="@+id/btnFecha"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_min_height"
                android:gravity="center_vertical"
                android:text="ðŸ“… Hoy"
                android:fontFamily="monospace"
                android:textSize="@dimen/text_body"
                android:textColor="@color/text_primary"
                android:background="@drawable/bg_stat_card"
                android:paddingStart="@dimen/spacing_md"
                android:paddingEnd="@dimen/spacing_md"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="@dimen/spacing_lg" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="@dimen/spacing_sm">

            <TextView
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_min_height"
                android:gravity="center"
                android:paddingStart="@dimen/spacing_xl"
                android:paddingEnd="@dimen/spacing_xl"
                style="@style/PixelText.Body"
                android:text="CANCELAR"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="@dimen/spacing_sm" />

            <TextView
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_min_height"
                android:gravity="center"
                android:paddingStart="@dimen/spacing_xl"
                android:paddingEnd="@dimen/spacing_xl"
                style="@style/PixelText.Body"
                android:text="GUARDAR"
                android:textColor="@color/bg_main"
                android:textSize="@dimen/text_body"
                android:background="@color/green_accent"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
