<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_card"
    android:padding="16dp">

    <!-- Header: Selected Category + Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvCategoriaIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="â˜•"
            android:textSize="24sp"
            android:background="@drawable/bg_icon_circle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvCategoriaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CafÃ©"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvDisplayMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C$ 0"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="monospace" />
        </LinearLayout>

        <!-- Currency Toggle -->
        <TextView
            android:id="@+id/btnMoneda"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="COR"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_stat_card"
            android:textColor="@color/gold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:layout_marginBottom="16dp"/>

    <!-- Numpad Grid -->
    <GridLayout
        android:id="@+id/numpadGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins">

        <!-- Row 1 -->
        <Button style="@style/NumpadButton" android:text="1" />
        <Button style="@style/NumpadButton" android:text="2" />
        <Button style="@style/NumpadButton" android:text="3" />

        <!-- Row 2 -->
        <Button style="@style/NumpadButton" android:text="4" />
        <Button style="@style/NumpadButton" android:text="5" />
        <Button style="@style/NumpadButton" android:text="6" />

        <!-- Row 3 -->
        <Button style="@style/NumpadButton" android:text="7" />
        <Button style="@style/NumpadButton" android:text="8" />
        <Button style="@style/NumpadButton" android:text="9" />

        <!-- Row 4 -->
        <Button style="@style/NumpadButton" android:text="." />
        <Button style="@style/NumpadButton" android:text="0" />
        <ImageButton
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_input_delete"
            android:background="?attr/selectableItemBackground"
            android:scaleType="centerInside"
            android:tint="@color/red_accent" />

    </GridLayout>
    
    <!-- Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        
        <TextView
             android:id="@+id/btnNota"
             android:layout_width="0dp"
             android:layout_height="56dp"
             android:layout_weight="1"
             android:gravity="center"
             android:text="ðŸ“ Nota"
             android:textSize="14sp"
             android:fontFamily="monospace"
             android:textColor="@color/text_secondary"
             android:background="?attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:text="GUARDAR"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_accent" />
            
    </LinearLayout>

</LinearLayout>
