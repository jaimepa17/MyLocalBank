<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_widget"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BALANCE MENSUAL"
        android:textColor="#50000000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C$ 0.00"
        android:textColor="#FF0F7A3F"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        tools:text="C$ 3,800.00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresos"
                android:textSize="10sp"
                android:textColor="#50000000"/>
            <TextView
                android:id="@+id/tvIngresos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#0F9B58"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="+C$ 5,000.00"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastos"
                android:textSize="10sp"
                android:textColor="#50000000"/>
            <TextView
                android:id="@+id/tvGastos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#D94040"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="-C$ 1,200.00"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
