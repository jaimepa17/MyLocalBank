<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/page_padding"
            android:paddingEnd="@dimen/page_padding"
            android:paddingTop="@dimen/page_padding"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PixelText.Title"
                android:text="INGRESOS"
                android:textSize="@dimen/text_title" />

            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="@color/gold"
                android:layout_marginTop="@dimen/spacing_sm" />
        </LinearLayout>

        <!-- Month Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_md"
            android:paddingBottom="@dimen/spacing_sm"
            android:paddingStart="@dimen/page_padding"
            android:paddingEnd="@dimen/page_padding">

            <TextView
                android:id="@+id/btnPrevMonth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="â—€"
                android:textSize="16sp"
                android:textColor="@color/gold"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_stat_card" />

            <TextView
                android:id="@+id/tvCurrentMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:text="ENERO 2026" />

            <TextView
                android:id="@+id/btnNextMonth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="â–¶"
                android:textSize="16sp"
                android:textColor="@color/gold"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_stat_card" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/page_padding">

                <!-- ===== TOTALES CARD ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_balance_card"
                    android:padding="@dimen/spacing_xl"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Small"
                        android:text="â–¸ TOTAL INGRESOS"
                        android:textColor="@color/balance_text_secondary"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tvTotalIngresos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Amount"
                        android:text="C$ 0.00"
                        android:textColor="#FF4CAF50"
                        android:layout_marginTop="@dimen/spacing_xs" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/balance_badge_bg"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <!-- Breakdown: Fijos / Variables -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/PixelText.Small"
                                android:text="ðŸ’¼ FIJOS"
                                android:textColor="@color/balance_text_secondary"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvTotalFijos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/PixelText.Body"
                                android:text="C$ 0.00"
                                android:textColor="#FF4CAF50"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/spacing_xs" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/PixelText.Small"
                                android:text="ðŸ’° EXTRAS"
                                android:textColor="@color/balance_text_secondary"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvTotalExtras"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/PixelText.Body"
                                android:text="C$ 0.00"
                                android:textColor="#FF4CAF50"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/spacing_xs" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Effective / Pending row -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/balance_badge_bg"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:id="@+id/tvIngresosEfectivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="âœ“ Efectivo: C$ 0.00"
                        android:textSize="10sp"
                        android:textColor="@color/balance_text_secondary"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/tvIngresosPendiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="â³ Pendiente: C$ 0.00"
                        android:textSize="10sp"
                        android:textColor="@color/balance_text_secondary" />
                </LinearLayout>

                <!-- ===== INGRESOS FIJOS (from FuenteIngreso TRABAJO) ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_stat_card"
                    android:padding="@dimen/spacing_xl"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Title"
                        android:text="ðŸ’¼ INGRESOS FIJOS"
                        android:textSize="@dimen/text_body" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:background="@color/gold"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <LinearLayout
                        android:id="@+id/layoutIngresosFijos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <TextView
                        android:id="@+id/tvEmptyFijos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Small"
                        android:text="Sin ingresos fijos. ConfigÃºralos en âš™ Config"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- ===== INGRESOS EXTRAS (RegistroIngreso) ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/PixelText.Body"
                        android:text="ðŸ’° Ingresos Extras del Mes"
                        android:textSize="@dimen/text_body"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvConteoExtras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/text_secondary"
                        android:text="0 registros" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvExtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <LinearLayout
                    android:id="@+id/emptyStateExtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_stat_card"
                    android:padding="@dimen/spacing_xl"
                    android:gravity="center"
                    android:minHeight="@dimen/btn_min_height"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’°"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Body"
                        android:text="Sin ingresos extras este mes"
                        android:textSize="@dimen/text_body"
                        android:layout_marginTop="@dimen/spacing_sm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/PixelText.Small"
                        android:text="Toca + para registrar un ingreso"
                        android:textSize="@dimen/text_small"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/spacing_xs" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/page_padding"
        android:src="@android:drawable/ic_input_add"
        app:tint="@color/white"
        app:backgroundTint="@color/green_accent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
