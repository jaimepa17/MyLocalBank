                android:layout_height="1dp"
                android:background="@color/card_border_subtle"
                android:layout_marginTop="@dimen/spacing_lg"
                android:layout_marginBottom="@dimen/spacing_lg" />

            <!-- ===== FUENTES DE INGRESO SECTION ===== -->
            <LinearLayout
